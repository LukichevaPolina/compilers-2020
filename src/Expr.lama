public fun binop(op, l, r) {
    case op of
		  "+" -> l + r 
		| "-" -> l - r 
		| "*" -> l * r 
		| "/" -> l / r 
		| "%" -> l % r
		| "==" -> l == r 
		| "!=" -> l != r 
		| "<" -> l < r 
		| ">" -> l > r 
		| "<=" -> l <= r 
		| ">=" -> l >= r 
		| "&&" -> l && r 
		| "!!" -> l !! r
    esac
}
